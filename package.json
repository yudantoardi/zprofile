{
  "name": "company-profile",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "SKIP_ENV_VALIDATION=true next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:aggressive": "rm -rf .next node_modules/.cache && find node_modules -name '*.map' -type f -delete && find node_modules -name '*.d.ts' -type f -delete 2>/dev/null || true",
    "build:analyze": "ANALYZE=true npm run build",
    "build:optimized": "npm run clean:aggressive && npm run build",
    "optimize": "npm run clean:aggressive && npm audit fix --force && npm dedupe",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "nodemailer": "^7.0.12",
    "prisma": "^6.19.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "20.19.30",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19.2.9",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^5.2.0"
  }
}
